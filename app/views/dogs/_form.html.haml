= form_for @dog do |f|
  - if @dog.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dog.errors.count, "error")} prohibited this dog from being saved:"
      %ul
        - @dog.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
