#mailCollection.row
  - if line == "line_3"
    .line3.milk
      = t("landing_page.landing_075.line_3").html_safe
    .spacer-2x
    - mailcollector = defined?(mail_collector) ? mail_collector : MailCollector.new
    = bootstrap_form_for(mailcollector, :remote => :true) do |f|
      #landing-mail
        .centered= f.text_field :email, append: ( f.submit t(:send) ), prepend: t("landing_page.email.label").html_safe, :hide_label => :true, placeholder: t("landing_page.email.placeholder").html_safe
        = f.check_box :privacy_accepted, label: t("landing_page.landing_075.privacy_accepted").html_safe
    .spacer-2x
  - else
    .line2
      = t("landing_page.landing_075.line_4").html_safe

