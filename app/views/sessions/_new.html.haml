-#provide(:title, 'Log in')
  %h1 Log in
  = bootstrap_form_for(:session, :remote => :true ) do |f|
    = render 'shared/error_messages', object: f.object
    .row
      .field
        = f.label 'email or nickname' 
        = f.text_field :email, :placeholder => "Enter email address or nickname"
      .field
        = f.label :password 
        = f.text_field :password, :placeholder => "Enter password"
      .field
        = f.label 'Remember me on this computer'
        = f.check_box :remember_me
      = f.submit "Log in", class: "btn btn-primary"
    .row
      %br
      = link_to "Forgot password?", new_password_reset_path, :remote => :true
      %br
      New user? 
      = link_to "Sign up now!", signup_path
