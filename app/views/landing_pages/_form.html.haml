- if landing_page.errors.count == 0
  = puts "landing_page: #{landing_page[:logo]}"
  %div{ :id => landing_page.uuid }
    = bootstrap_form_for(landing_page, :remote => :true,  :html => {:multipart => true} ) do |f|
      .landing-page-description
        = f.text_area :description, :prepend => :description, :placeholder => "Enter the group description", :hide_label => :true
      -#.form-group
        = f.text_field :logo, :prepend => "logo image", :placeholder => "Enter the logo image url", :hide_label => :true, :disabled => :true
        = f.file_field :logo, :prepend => "logo image", :placeholder => "Enter the logo image url", :hide_label => :true
        = image_tag landing_page.logo.url(:logo) 
        = f.hidden_field :logo_cache
      -#.form-group
        = f.text_field :header, :prepend => "header image", :placeholder => "Enter the header image url", :hide_label => :true, :disabled => :true
        = f.file_field :header, :prepend => "header image", :placeholder => "Enter the header image url", :hide_label => :true
        = image_tag landing_page.header.url(:medium) 
        = f.hidden_field :header_cache
      = cl_image_tag landing_page.logo, :height => (cookies[:height].to_i / 2), :class => "responsive"
      #upload_widget_logo "Upload logo image"
      - ratio_logo = 200.0/150.0
      :javascript 
        cloudinary.applyUploadWidget(document.getElementById('upload_widget_logo'), 
          { cloud_name: 'dev-joinple-com', upload_preset: 'landing-logo', field_name: 'landing_page[logo]', cropping: 'server', multiple: 'false', cropping_aspect_ratio: "#{ratio_logo}" }, 
            function(error, result) {console.log(error, result)});

      = cl_image_tag landing_page.header, :height => (cookies[:height].to_i / 2), :class => "responsive"
      #upload_widget_header "Upload header image"
      - ratio_header = 2560.0/800.0
      :javascript 
        cloudinary.applyUploadWidget(document.getElementById('upload_widget_header'), 
          { cloud_name: 'dev-joinple-com', upload_preset: 'landing-header', field_name: 'landing_page[header]', cropping: 'server', multiple: 'false', cropping_aspect_ratio: "#{ratio_header}" }, 
            function(error, result) {console.log(error, result)});
      .form-group     
        %button.icon_only{ :type => "submit", :remote => :true, :name => "commit", :hide_label => :true, :title => "Save the element"  } 
          %span.glyphicon.glyphicon-save
