#group-form{ :class => group.errors.count == 0 ? 'collapse' : 'collapse in' }
  .spacer
  .col-xs-15
  .col-xs-30
    .panel.panel-default.nothing
      .panel-heading{ :style => current_social_network_style }
        %a.toggle{ :type => "toggle", "data-target" => "#group-form", "data-toggle" => "collapse"}
          .panel-title
            - if defined?(title)
              = title
              .button.close{:type => "button", "data-dismiss" => "alert", "aria-label" => "Close" }
            - else
              = "Create a new group"
            %span.caret.to-right
      .panel-body
        = bootstrap_form_for(group, :remote => :true, :html => {:multipart => true} ) do |f|
          .nothing= f.text_field :name, :prepend => :name, :placeholder => "Enter the group name ", :hide_label => :true
          .spacer
          .nothing= f.text_area :description, :prepend => :description, :placeholder => "Enter the group description", :hide_label => :true

          .nothing= f.check_box :is_open 
          .nothing= f.check_box :is_private 

          .nothing= f.color_field :background_color, :prepend => "background color", :placeholder => "Enter the standard background color", :hide_label => :true, :class => "left-align" 
          .spacer
          .nothing= f.color_field :text_color, :prepend => "text color", :placeholder => "Enter the standard text color", :hide_label => :true, :class => "left-align" 
          .spacer

          .nothing= f.text_field :logo, :prepend => "logo image", :placeholder => "Select the group logo (200x200 px)", :hide_label => :true, :disabled => :true
          .spacer
          .nothing= f.file_field :logo, :prepend => "logo image", :placeholder => "Select the group logo (200x200 px)", :hide_label => :true
          .spacer
          .nothing= image_tag group.logo.url(:profile) 
          .spacer
          .nothing= f.hidden_field :logo_cache

          .nothing= f.text_field :header, :prepend => "logo image", :placeholder => "Select the group banner (916x315 px)", :hide_label => :true, :disabled => :true
          .spacer
          .nothing= f.file_field :header, :prepend => "logo image", :placeholder => "Select the group banner (916x315 px)", :hide_label => :true
          .spacer
          .nothing= image_tag group.header.url(:profile) 
          .spacer
          .nothing= image_tag group.header.url(:sm_banner) 
          .spacer
          .nothing= f.hidden_field :header_cache

          %button.icon_only{ :type => "submit", :name => "commit", :hide_label => :true, :title => "Save the element" } 
            %i.im-save-3
            = "save"
          %button.icon_only{ :type => "reset", :name => "reset", :hide_label => :true, :title => "cancel" } 
            %i.im-cancel-circle
            = "exit without saving"  
  .col-xs-15

