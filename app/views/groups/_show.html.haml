- if group.errors.count == 0
  %div{ :id => group.uuid }
    .thumbnail
      .container-fluid.nopadding
        -# owner = post.is_owned_by
        - owner = group.query_as(:p).match("(p)<-[r:owns]-(u:User)").pluck(:u).first
        = puts "Owner: #{owner} --------------------------------------------------------"
        %aside.col-xs-1.nomargin
          .post-owner
            = gravatar_for owner, size: 32
            = link_to root_path do
              %span.glyphicons.icon-triangle-up
            = rand(0...1000)
            %br
            = link_to root_path do
              %span.glyphicons.icon-triangle-down
        .col-xs-10
          .post-header
            = " - by #{owner.full_name} - #{group.created_at.strftime('%F at %H:%M')}"
          .post-title
            = group.name
          .post-content
            = group.description
          .post-glyps
            = link_to onerel_path(group,'Group','likes'), :method => :post, :remote => :true do
              %span.glyphicons.icon-like-1
              - likes = group.query_as(:p).match("(p)<-[r:likes]-(u:User)").pluck(:u).count
              - if likes > 0
                %span.badge
                  = likes
            -#  Like
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            = link_to root_path do
              %span.glyphicons.icon-share-outline
            -#  Join
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
            = link_to root_path do
              %span.glyphicons.icon-star-4
            -#  Preferite
        .col-xs-1
          - if can_modify?(group)
            .command-button
              = link_to edit_group_path(group), :remote => :true, :hide_label => :true, "data-placement" => :top, :title => "Modify the element" do
                %span.glyphicon.icon-edit-modify-streamline
              = link_to group, :method => :delete, :data => { :confirm => 'Are you sure?' }, :remote => :true, :hide_label => :true, "data-placement" => :top, :title => "Delete the element" do
                %span.glyphicon.icon-delete-garbage-streamline
          = group.is_open ? 'Open' : 'Close'
          = group.is_private ? 'Private' : 'Public'

