- search = "AA"

%img.img-header{ :src => "http://cdn001.crowdupcafe.com/public/863x200-transparent.svg", :style => "background-color: #{group.background_color}; color: #{group.text_color};" }  
.group-header{ :style => "background-color: #{group.background_color}; color: #{group.text_color};" }
  %span.group-title
    = group.name
  %span.group-description
    = group.description

= bootstrap_form_for(search, :remote => :true, layout: :inline ) do |f|
  .panel.panel-default
    .panel-body
      .btn-toolbar{ :role => "toolbar" }
        .btn-group{ :role => "group" }
          %button.btn.btn-default{ :type => "button", :title => "My groups" }
            = link_to group_list_path('iparticipate'), :method => :post, :remote => :true do
              %span.fa-lg
                %i.fa.fa-icon.icon-torsos-all-female
          %button.btn.btn-default{ :type => "button", :title => "Groups I administer" }
            = link_to group_list_path('iadminister'), :method => :post, :remote => :true do
              %span.fa-lg
                %i.fa.fa-icon.icon-tools
          %button.btn.btn-default{ :type => "button", :title => "Pending invitations" }
            = link_to group_list_path('pendinginvitation'), :method => :post, :remote => :true do
              %span.fa-lg
                %i.fa.fa-icon.icon-pin
              -#%i.fa.fa-icon.icon-pin.fa-stacked
        .btn-group{ :role => "group" }
          %span.input-group-btn.search.fa-lg{ :type => "button" }
            = f.text_field :name, :prepend => "Search", :placeholder => "Enter the text to search", :hide_label => :true, :title => "Text to search"
            %button.btn.btn-default{ :type => "button" }
              %span.fa-lg
                %i.fa.fa-icon.glyphicon.glyphicon-search
        .btn-group{ :role => "group" }
          %button.btn.btn-default{ :type => "button", :title => "My discussions" }
            %span.fa-lg
              %i.fa.fa-icon.icon-list-1
= render partial: 'shared/debug'
