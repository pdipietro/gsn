- search = "AA"
:javascript
  $(function() {
    $('input:checkbox').bootstrapSwitch();
  });
.group-header{ :style => "background-color: #{group.background_color}; color: #{group.text_color};" }
  %img.img-header{ :src => "http://cdn001.crowdupcafe.com/public/863x200-transparent.svg" }  
  %span.group-title
    = group.name
  %span.group-description
    = group.description
  %span.public_group
    %span
      %input{ :type => "checkbox", checked: group.is_private, "data-label-text" => "private", "data-label-width" => "auto", "data-size" => "small", "readonly" => "true", "data-on-text" => "YES", "data-off-text" => "NO" } 
    %span
      %input{ :type => "checkbox", checked: group.is_open, "data-label-text" => "open", "data-label-width" => "auto", "data-size" => "small", "readonly" => "true" , "data-on-text" => "YES", "data-off-text" => "NO" }
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  %span.members
    - members = group.query_as(:g).match("(g)<-[r:is_member_of|owns]-(u:User)").pluck(:u).count
    = "#{pluralize(members, "member")}"
  &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
  %span.join-the-group
    - is_member = group.query_as(:g).match("(g)<-[r:is_member_of|owns]-(u:User { uuid: '#{current_user.uuid}' })").pluck(:u).count
    = link_to onerel_path(group,'Group','has_member'), :method => :post, :remote => :true do
      = is_member == 1 ? "abandone the group" : "join the group"
      -#  Join / Unjoin

= bootstrap_form_for(search, :remote => :true, layout: :inline ) do |f|
  .panel.panel-default
    .panel-body
      .btn-toolbar{ :role => "toolbar" }
        .btn-group{ :role => "group" }
          %button.btn.btn-default{ :type => "button", :title => "Discussion" }
            = link_to group_list_path('iparticipate'), :method => :post, :remote => :true do
              %span.fa-lg
                %i.fa.fa-icon.icon-torsos-all-female
          %button.btn.btn-default{ :type => "button", :title => "Events" }
            = link_to group_list_path('iadminister'), :method => :post, :remote => :true do
              %span.fa-lg
                %i.fa.fa-icon.icon-tools
          %button.btn.btn-default{ :type => "button", :title => "Participants" }
            = link_to group_list_path('pendinginvitation'), :method => :post, :remote => :true do
              %span.fa-lg
                %i.fa.fa-icon.icon-users-outline
        .btn-group{ :role => "group" }
          %span.input-group-btn.search.fa-lg{ :type => "button" }
            = f.text_field :name, :prepend => "Search", :placeholder => "Enter the text to search", :hide_label => :true, :title => "Text to search"
            %button.btn.btn-default{ :type => "button" }
              %span.fa-lg
                %i.fa.fa-icon.glyphicon.glyphicon-search
= render partial: 'shared/debug'
