/*
 * this is a generic on top form manager
 *
 * Params:
 *
 * form_to_embed
 * 'object' to pass
 * header: true/false
 * footer: true/false
 * forms: { forms }
*/


$("#full-screen-image").html("<%= escape_javascript(render partial: form_to_embed, 
																locals: { object: :object, 
																					header: :header, 
																					footer: :footer, 
																					forms: forms 
																				} 
																				) %>" );
