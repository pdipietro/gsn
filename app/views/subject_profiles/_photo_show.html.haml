
- sizes = Hash.new
- sizes = { basic: 18, small: 24, comment: 30, header: 32, btn: 36, thumb: 84, icon: 128, standard: 200, profile: 250 }

- size = :btn unless size.is_a? Symbol

- dimension = sizes[size]

- aShape = defined?(shape) ? shape : "" 

- quality = 50
- if dimension < 200  
	- quality = 20

= cl_image_tag image_uuid, width: dimension, crop: :scale, quality: quality, class: "#{aShape}", default_image: 'default_avatar.png'
