#subject-profile-form.collapse.in{ :class => subject_profile.errors.count == 0 ? 'collapse' : 'collapse in' }
  .spacer
  .col-xs-15
  .col-xs-30
    .panel.panel-default.nothing
      .panel-heading{ :style => super_social_network_style }
        %a.toggle{ :type => "toggle", "data-target" => "#subject_profile-form", "data-toggle" => "collapse"}
          .panel-title
            = "Manage your subject profile"
            %span.caret.to-right
      .panel-body
        = bootstrap_form_for(subject_profile, :remote => :true, :html => {:multipart => true} ) do |f|
          .nothing= f.text_area :description, :prepend => :description, :placeholder => "Enter the subject description", :hide_label => :true
          .spacer

          .nothing= f.color_field :background_color, :prepend => "background color", :placeholder => "Enter the standard background color", :hide_label => :true, :class => "left-align" 
          .spacer
          .nothing= f.color_field :text_color, :prepend => "text color", :placeholder => "Enter the standard text color", :hide_label => :true, :class => "left-align"
          .spacer

          = render partial: "subject_profiles/photo_load", locals: { :subject_profile => subject_profile, :size => :profile }
          .spacer

          %button.icon_only{ :type => "submit", :name => "commit", :hide_label => :true, :title => "Save the element" } 
            %i.im-save-3
            = "save"
          %button.icon_only{ :type => "reset", :name => "reset", :hide_label => :true, :title => "cancel" } 
            %i.im-cancel-circle
            = "exit without saving"  

          .spacer

.col-xs-15

