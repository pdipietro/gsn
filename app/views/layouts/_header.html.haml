%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    %nav
      %ul.nav.navbar-nav.pull-left
        %li.social_icon
          = image_tag 'icon/social/48x48/chat.png', size: '48x48', alt: 'Home'
          = image_tag 'icon/social/home/Home_256_256_32.png', size: '48x48', alt: 'Home'
          = image_tag 'icon/social/32x32/calendar-group.bmp', size: '32x32', alt: 'Home'
        %li.social_icon
          = link_to get_social_name.humanize, root_path, id: "logo"
      %ul.nav.navbar-nav.pull-right
        %li
          = link_to root_path do
            =# image_tag 'icon/social/24x24/home.png', size: '24x24', alt: 'Home'
            =# image_tag 'icon/social/home/Home_256_256_32.png', size: '16x16', alt: 'Home'
            = image_tag 'icon/social/home/Home_256_256_32.png', size: '24x24', alt: 'Home'
            =# image_tag 'icon/social/home/Home_256_256_32.png', size: '28x28', alt: 'Home'
            =# image_tag 'icon/social/home/Home_256_256_32.png', size: '48x48', alt: 'Home'
        - if logged_in?
          %li
            = link_to users_path, title: "Users", rel: 'tooltip' do
              = image_tag 'icon/social/24x24/profile.png', size: '24x24', alt: 'Users'
              = image_tag 'icon/social/32x32/calendar-group.bmp', size: '32x32', alt: 'Home'
              = image_tag 'icon/social/48x48/chat.png', size: '24x24', alt: 'Home'
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              = image_tag 'icon/social/24x24/add.png', size: '24x24', alt: 'Add'
              %b.caret
            %ul.dropdown-menu
              %li= link_to "New group", root_path
              %li= link_to "New chat", root_path
              %li= link_to "New workgroup", root_path
              %li.divider
              %li= link_to "Load an image", root_path
          %li
            = link_to current_user do
              = gravatar_for current_user, size: 24
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              = current_user.nickname
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Profile", current_user
              %li= link_to "Settings", edit_user_path(current_user)
          %li
            = link_to logout_path, method: "delete", title: 'Log out', rel: 'tooltip' do
              = image_tag 'icon/social/24x24/exit.png', size: '24x24', alt: 'Log out'
        - else
          %li
            = link_to "Log in", login_path
