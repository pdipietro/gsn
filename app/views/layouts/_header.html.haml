%nav.navbar-default.navbar-fixed-top{ :role => "navigation" }
  - user_profile = logged_in? ? profile?(current_user) : nil
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{ :type => "button", "data-toggle" => "collapse",  "data-target" => "#navbar" }
        %span.sr-only  Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .navbar-brand.logo
        = image_tag "joinple_logo.png"
    #navbar.navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-right
        - if Rails.env.development?
          %li
            = "(width: #{session[:width]}, height: #{session[:height]}, pixel ratio: #{session[:pixelRatio]})"
        - unless logged_in?
          %li
            = link_to root_path, :title => "Joinplee home" do
              %i.header.im-home
              -#Home
          %li
            = link_to login_path, :remote => :true, :title => "Log in" do
              %i.header.im-login-landing
          %li
            = link_to signup_path, :remote => :true, :title => "Sign up" do
              %i.header.im-signup-landing
        - else
          %li
            = link_to root_path, :remote => :true, :title => "Go to Joinple" do
              %i.header.im-home
          %li
            = link_to users_path, :remote => :true, :title => "People" do
              %i.header.im-people-sidebardx
          %li.dropdown
            %a.dropdown-toggle{ :href => "#", :id => "dropdownSocial", "data-toggle" => "dropdown", :type => "button", :title => "Social networks", "aria-expanded" => "false"}
              %i.header.im-shuffle
              %span.caret
            %ul.dropdown-menu{ :role => "menu", "aria-labelledby" => "dropdownSocial" }
              - @social_networks = SocialNetwork.all.order(created_at: :desc)
              - @social_networks.each do |social_network| 
                - if social_network.name != current_social_network_name?
                  %li
                    %a{ :href => "#{calculate_full_path(social_network)}" }
                      %i.header-dropdown.im-dot{ :style => "color: #{social_network.background_color};" }
                      = social_network.name
          %li
            = link_to root_path, :remote => :true, :title => "Notifications" do
              %i.header.im-bell
          %li
            = link_to users_path, :remote => :true, :title => "Messages" do
              %i.header.im-envelop
          %li.dropdown.navbar-brand
            %a.dropdown-toggle{ :href => "#", "aria-expanded" => "false", "data-toggle" => "dropdown", :type => "button", :title => "About the 'Super Social Network'"} 
              %i.header.im-terms
              %span.caret
            %ul.dropdown-menu{ :role => "menu"}
              %li
                = link_to privacy_path, :remote => :true do
                  %i.header-dropdown.im-eye
                  Privacy
              %li
                = link_to contacts_path, :remote => :true do
                  %i.header-dropdown.im-contacts
                  Contacts
              %li
                = link_to terms_path, :remote => :true do
                  %i.header-dropdown.im-terms-conditions
                  Terms & Conditions
              %li.divider
              %li
                = link_to help_path, :remote => :true do
                  %i.header-dropdown.im-lifebuoy
                  Help
              %li
                = link_to help_path, :remote => :true do
                  %i.header-dropdown.im-faq
                  FAQ
              %li
                = link_to about_path, :remote => :true do
                  %i.header-dropdown.im-contacts
                  About
          %li.dropdown
            %a.dropdown-toggle.header-user-photo{ :href => "#", :id => "dropdownUser", "data-toggle" => "dropdown", :type => "button", :title => "Myself",  "aria-expanded" => "false"}
              %span
                - unless user_profile.nil?
                  = image_tag user_profile.photo.url(:btn), :size => ("32x32")
                - else
                  %i.header.im-user-plus
                = "Wellcome, #{current_user.first_name}"
                %span.caret
            %ul.user.dropdown-menu{ :role => "menu", "aria-labelledby" => "dropdownUser" }
              %li
                = link_to posts_path, :remote => :true do
                  %i.header-dropdown.im-about
                  My discussions
              %li
                = link_to groups_path, :remote => :true do
                  %i.header-dropdown.im-about
                  My workrooms
              %li.divider
              %li
                = link_to groups_path, :remote => :true do
                  %i.header-dropdown.im-about
                  Setting
              %li.divider
              %li
                = link_to edit_user_profile_path(user_profile.id), :remote => :true do
                  %i.header-dropdown.im-profile-setting
                  Change profile
              %li
                = link_to current_user, :remote => :true do
                  %i.header-dropdown.im-about
                  Change password
              %li.divider
              %li
                = link_to current_user, :remote => :true do
                  %i.header-dropdown.im-about
                  Everythings
              %li
                = link_to logout_path, method: "delete", :title => "Log out" do
                  %i.header-dropdown.im-about
                  Log out
              - if is_admin?
                %li.divider
                %li.header
                  Administration
                %li
                  = link_to landing_pages_path, :remote => :true  do
                    %i.header-dropdown.im-landing-page
                    Landing page
                %li
                  = link_to social_networks_path, :remote => :true  do
                    %i.header-dropdown.im-social-networks
                    Social networks
                %li.divider
                %li
                  = link_to languages_path, :remote => :true  do
                    %i.header-dropdown.im-language
                    Languages
                %li
                  = link_to dummy_path, :remote => :true  do
                    %i.header-dropdown.im-administrator
                    Administrators
                %li
                  = link_to tests_path  do
                    %i.header-dropdown.im-about
                    Test
                -#%li
                  = link_to image_list_path  do
                    %i.header-dropdown.im-about
                    Media Manager
