%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    %nav
      %ul.nav.navbar-nav.pull-left
        %li.social_icon
          = image_tag 'icon/social/home-nor.png', size: '48x48', alt: 'Home'
        %li.social_icon
          = link_to get_social_name.humanize, root_path, id: "logo"
      %ul.nav.navbar-nav.pull-right
        %li
          = link_to root_path do
            %div.icon24.home{:alt => 'Home'}
            %div.icon24.add.disabled{:alt => 'Add'}
            %div.icon24.add{:alt => 'Add'}
        - unless logged_in?
          %li
            = link_to "Log in", login_path
        - else
          %li
            = link_to users_path do
              %div.icon24.users{:alt => 'Users'}
              %div.icon24.chatadd{:alt => 'Add chat'}
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              %div
                .icon24.add{:alt => 'Add'}
                .icon24.caret{:alt => 'Add'}
            %ul.dropdown-menu
              %li= link_to "New group", root_path
              %li= link_to "Add chat", root_path
              -# %div.icon24.chatadd{:alt => 'Add chat'}
              %li= link_to "New workgroup", root_path
              %li.divider
              %li= link_to "Load an image", root_path
          %li
            = link_to current_user do
              = gravatar_for current_user, size: 24
          %li.dropdown
            %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
              = current_user.nickname
              %b.caret
            %ul.dropdown-menu
              %li= link_to "Profile", current_user
              %li= link_to "Settings", edit_user_path(current_user)
          %li
            = link_to logout_path, method: "delete" do
              %div.icon24.exit{:alt => 'Log out'}