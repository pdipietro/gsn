!!!
%html
  %head
    - csnn = current_social_network_name?.nil? ? "Gsn" : current_social_network_name?
    = puts " ******************************************* #{current_social_network_name?}"
    %title= csnn.capitalize
    :javascript
      document.cookie='width='+screen.width;
      document.cookie='height='+screen.height;
      document.cookie='pixelRatio='+("devicePixelRatio" in window ? devicePixelRatio : "1");
    = stylesheet_link_tag    'icomoon', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
 
    = javascript_include_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'salvattore', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag    'salvattore', media: 'all', 'data-turbolinks-track' => true

    -#%meta{ :name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"}    
    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1"}    
    = csrf_meta_tags
    = google_webfonts_init({              |
        google: ['Roboto Slab', 'Roboto'] |
      })                                  |
    = render 'layouts/shim'
    = puts "=================>>>> HERE IS APPLICATION LAYOUT"
    :javascript
      $(function() {
        $('input:checkbox').bootstrapSwitch();
      });
    %body{:sn => "#{csnn}"}
      #header
        = render 'layouts/header'
      #page.container-fluid
        = render partial: 'layouts/c3_9_0'
        -#= yield
