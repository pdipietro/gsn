!!!
%html
  %head
    = #%title= full_title(yield(:title))
    %title= get_social_name == "lavoro" ? "Work" : get_social_name.capitalize
    =# stylesheet_link_tag    "social/social_#{get_social_name == "lavoro" ? "work" : get_social_name}", media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag    'fontastic', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag    'glyphicons', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag    'glyphicons-bootstrap', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = stylesheet_link_tag    "social/#{get_social_name == "lavoro" ? "work" : get_social_name}_bootstrap", media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = render 'layouts/shim'
  %body{:sn => "#{get_social_name}"}
    
    = render 'layouts/header'
    .container
      - flash.each do |message_type, message|
        %div{:class => "alert alert-#{message_type}"}= message
      = yield
    .container
      =# render 'layouts/footer'
      = debug(params) if Rails.env.development?