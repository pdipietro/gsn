%container.border-top
  - owner = post.is_owned_by
  %aside.col-xs-1.border-top
    .post-owner
      = gravatar_for owner, size: 32
      %br
      = link_to root_path do
        %span.glyphicons.icon-triangle-up.x2
      %br
      = rand(0...1000)
      %br
      = link_to root_path do
        %span.glyphicons.icon-triangle-down.x2
  .col-xs-11.border-top
    .post-header
      = " - by #{owner.full_name} - #{post.created_at.strftime('%F at %H:%M')}"
    .post-title
      = post.title
    .post-content
      = post.content
    .post-glyps
      =#render 'users/likes', object: post
      = link_to likes_user_path(:ouuid => post.uuid)  do
        %span.glyphicons.icon-like-1
        - likes = post.likes_to.count
        - if likes > 0
          %span.badge
            = likes
      -#  Like
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      = link_to root_path do
        %span.glyphicons.icon-comment-3
        - comments = post.child.count
        - if comments > 0
          %span.badge
            = comments
      -#  Comment
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      = link_to root_path do
        %span.glyphicons.icon-share-outline
      -#  Share
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      = link_to root_path do
        %span.glyphicons.icon-reply
      -#  Reply
      &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
      = link_to root_path do
        %span.glyphicons.icon-star-4
      -#  Preferite