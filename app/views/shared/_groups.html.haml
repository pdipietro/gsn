%h1 Groups
%h3 Create a new Group
= form_for Group.new do |f|
  = render 'shared/error_messages', object: f.object
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :is_open 
    = f.check_box :is_open
  .field
    = f.label :is_private
    = f.check_box :is_private
  .actions
    = f.submit 'Create'
- @groups.each do |group|
  = render partial:'shared/group', object: group
