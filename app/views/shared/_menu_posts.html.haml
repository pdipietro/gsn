= link_to posts_list_path( current_social_network_uuid?, "ifollow"), :remote => :true do
  %li.left.list-group-item.no-padding
    .row
      .col-xs-15.nopadding
        = cl_image_tag current_social_network_logo?, :width => 34, :height => 34

      .col-xs-45.nothing.text-center
        %span.title= current_social_network_name?
        %span.row= t("layout.view.left.home_posts")

