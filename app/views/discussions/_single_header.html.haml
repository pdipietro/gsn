- if logged_in?
  - csn = current_social_network
  - group = discussion.belongs_to

  #discussion-header
    .relative.nothing
      = cl_image_tag discussion.banner, :height => browser_height.to_i / 3, width: window_width, :crop => :fill, :fetch_format => :auto, :class => "responsive"
      = cl_image_tag discussion.logo, :width => 80, :height => 80, :crop => :fill, :fetch_format => :auto, :class => "responsive overloaded-logo-80"
      - if group.logo.length === 0 
        .group-thumb-image-replacement{:style => "background-color: #{group.background_color}; ", :class => "overloaded-logo-80" }

      %span.semi-transparent-bar
      %span.solid-text
        %span.title= group.name
        = " - "
        = group.description
        %span.spaced-icon.transparent
          %button.btn.btn-default.btn-sm-nothing{ :type => "submit", :name => "commit", :hide_label => :true }= "J"

    .spacer

    = render partial: "discussions/show", locals: { discussion: discussion }

