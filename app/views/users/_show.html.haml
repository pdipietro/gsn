.thumbnail.margin-right
  .container-fluid
    .column
      .row
        .user-owner
          = gravatar_for user, size: 128
      .row
        = "#{user.full_name}"
      .row
        = "(#{user.nickname})"
        .post-glyps
          = link_to onerel_path(user,'User','likes'), :method => :post, :remote => :true do
            %span.glyphicons.icon-like-1
            - likes = user.query_as(:p).match("(p)<-[r:likes]-(u:User)").pluck(:u).count
            %span.badge
              = likes
      .row
        = render partial: 'shared/stats', locals: { user: user, current: :false }
